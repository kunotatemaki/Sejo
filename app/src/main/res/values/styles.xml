<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="SejoButton">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/minimal</item>
        <item name="android:fontFamily">@font/avertastdpesemibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="SejoButton.Candy">
            <item name="android:background">@drawable/bg_component_button_selector_candy</item>
    </style>

    <style name="SejoButton.Blue">
            <item name="android:background">@drawable/bg_component_button_selector_blue</item>
    </style>

    <style name="SejoButton.Green">
            <item name="android:background">@drawable/bg_component_button_selector_green</item>
    </style>

    <style name="SejoButton.Grey">
            <item name="android:background">@drawable/bg_component_button_selector_grey</item>
    </style>

    <style name="SejoButton.Colors">
            <item name="android:background">@drawable/bg_component_button_selector_colors</item>
    </style>

    <style name="SejoButton.Red">
            <item name="android:background">@drawable/bg_component_button_selector_red</item>
    </style>

    <style name="SimpleTextLabelBigBlack" parent="SimpleTextLabelBig">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SimpleTextLabelBig" parent="SimpleTextLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_400</item>
    </style>

    <style name="SimpleTextLabel">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:fontFamily">@font/avertastdperegular</item>
    </style>

    <style name="SimpleTextLabelSmallError" parent="SimpleTextLabelSmall">
        <item name="android:textColor">@color/red_600</item>
    </style>
    <style name="SimpleTextLabelSmall" parent="SimpleTextLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_400</item>
    </style>
    <style name="SimpleTextLabelSmallLink" parent="SimpleTextLabelSmall">
        <item name="android:selectable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:textColor">@color/text_link</item>
    </style>
    <style name="SimpleTextLabelMediumError" parent="SimpleTextLabelMedium">
        <item name="android:textColor">@color/red_600</item>
    </style>
    <style name="SimpleTextLabelMedium" parent="SimpleTextLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey_400</item>
    </style>

    <style name="SMSEditTextNumber">
        <item name="android:textSize">22dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="SimpleTextLabelMediumDark" parent="SimpleTextLabelMedium">
        <item name="android:textColor">@color/grey_500</item>
    </style>
    <style name="SimpleTextLabelMediumBlack" parent="SimpleTextLabelMedium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ComponentBulletsContainer">
        <item name="android:layout_marginTop">@dimen/component_bullets_textviews_margin</item>
        <item name="android:layout_marginStart">@dimen/component_bullets_textviews_margin</item>
        <item name="android:layout_marginBottom">@dimen/component_bullets_textviews_margin</item>
        <item name="android:layout_marginEnd">@dimen/component_bullets_textviews_margin</item>
    </style>
    <style name="ComponentBulletsTextViewBullet">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_bullet</item>
    </style>
    <style name="SimpleTextLabelVeryBigBlack_Semibold" parent="SimpleTextLabelVeryBigBlack">
        <item name="android:fontFamily">@font/avertastdpesemibold</item>
    </style>
    <style name="SimpleTextLabelVeryBigBlack" parent="SimpleTextLabelVeryBig">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SimpleTextLabelVeryBig" parent="SimpleTextLabel">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grey_400</item>
    </style>
    <style name="ComponentLoginKeyboardViewNumberContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/component_login_keyboard_view_number_fontsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/avertastdperegular</item>
        <item name="android:background">@drawable/ic_circular_ripple_32dp</item>
<!--        <item name="android:background">?actionBarItemBackground</item>-->
    </style>
    <style name="ComponentLoginKeyboardViewInner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">false</item>
    </style>

    <dimen name="component_login_keyboard_view_number_fontsize">32dp</dimen>
</resources>