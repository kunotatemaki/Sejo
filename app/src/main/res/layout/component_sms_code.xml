<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="android.text.SpannableStringBuilder"/>
        <import type="com.rookia.android.sejo.Constants"/>
        <variable
            name="introducedPin"
            type="android.text.SpannableStringBuilder"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/component_sms_edittext_main_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="8dp">

        <TextView
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/component_sms_edittext_error"
            style="@style/SimpleTextLabelMediumError"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/validate_sms_error_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/component_sms_edittext_box_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_component_sejo_sms_edittext"
            android:paddingBottom="8dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/component_sms_edittext_error">


            <RelativeLayout
                android:id="@+id/component_sms_edittext_text_0_label_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/component_sms_edittext_text_1_label_container"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/component_sms_edittext_text_0_label"
                    style="@style/BnextSMSEditTextNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:visibility="invisible"
                    tools:text="0"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/component_sms_edittext_text_0_bullet"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_sms_bullet"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/component_sms_edittext_text_1_label_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/component_sms_edittext_text_2_label_container"
                app:layout_constraintStart_toEndOf="@+id/component_sms_edittext_text_0_label_container"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/component_sms_edittext_text_1_label"
                    style="@style/BnextSMSEditTextNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:visibility="invisible"
                    tools:text="1"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/component_sms_edittext_text_1_bullet"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_sms_bullet"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/component_sms_edittext_text_2_label_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/component_sms_edittext_text_dash_label"
                app:layout_constraintStart_toEndOf="@+id/component_sms_edittext_text_1_label_container"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/component_sms_edittext_text_2_label"
                    style="@style/BnextSMSEditTextNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:visibility="invisible"
                    tools:text="2"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/component_sms_edittext_text_2_bullet"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_sms_bullet"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <TextView
                android:id="@+id/component_sms_edittext_text_dash_label"
                style="@style/BnextSMSEditTextNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/grey_400"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/component_sms_edittext_text_3_label_container"
                app:layout_constraintStart_toEndOf="@+id/component_sms_edittext_text_2_label_container"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="-"
                tools:ignore="HardcodedText" />


            <RelativeLayout
                android:id="@+id/component_sms_edittext_text_3_label_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/component_sms_edittext_text_4_label_container"
                app:layout_constraintStart_toEndOf="@+id/component_sms_edittext_text_dash_label"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/component_sms_edittext_text_3_label"
                    style="@style/BnextSMSEditTextNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:visibility="invisible"
                    tools:text="3"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/component_sms_edittext_text_3_bullet"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_sms_bullet"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/component_sms_edittext_text_4_label_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/component_sms_edittext_text_5_label_container"
                app:layout_constraintStart_toEndOf="@+id/component_sms_edittext_text_3_label_container"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:id="@+id/component_sms_edittext_text_4_label"
                    style="@style/BnextSMSEditTextNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:visibility="invisible"
                    tools:text="4"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/component_sms_edittext_text_4_bullet"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_sms_bullet"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/component_sms_edittext_text_5_label_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintStart_toEndOf="@+id/component_sms_edittext_text_4_label_container"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/component_sms_edittext_text_5_label"
                    style="@style/BnextSMSEditTextNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:visibility="invisible"
                    tools:text="5"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/component_sms_edittext_text_5_bullet"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_sms_bullet"
                    android:layout_centerInParent="true"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>


        </LinearLayout>

        <!-- https://stackoverflow.com/questions/12083183/android-edittext-max-length/19222238#19222238 -->
        <!-- https://stackoverflow.com/questions/17586102/edittext-request-focus-not-working -->
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/component_sms_edittext_hidden_edittext"
            android:layout_width="1px"
            android:layout_height="1px"
            android:inputType="number"
            android:background="@android:color/transparent"
            android:maxLength="@{Constants.SMS_PIN_LENGTH}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>