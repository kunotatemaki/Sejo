<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="action"
            type="com.rookia.android.sejo.ui.views.numerickeyboard.NumericKeyboardActions" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin">


        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_1"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="1"
            app:layout_constraintEnd_toStartOf="@id/component_numeric_keyboard_view_number_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_2"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="2"
            app:layout_constraintEnd_toStartOf="@id/component_numeric_keyboard_view_number_3"
            app:layout_constraintStart_toEndOf="@id/component_numeric_keyboard_view_number_1"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_3"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/component_numeric_keyboard_view_number_2"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_4"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="4"
            app:layout_constraintEnd_toEndOf="@id/component_numeric_keyboard_view_number_1"
            app:layout_constraintStart_toStartOf="@id/component_numeric_keyboard_view_number_1"
            app:layout_constraintTop_toBottomOf="@id/component_numeric_keyboard_view_number_1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_5"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="5"
            app:layout_constraintEnd_toEndOf="@id/component_numeric_keyboard_view_number_2"
            app:layout_constraintStart_toStartOf="@id/component_numeric_keyboard_view_number_2"
            app:layout_constraintTop_toBottomOf="@id/component_numeric_keyboard_view_number_2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_6"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="6"
            app:layout_constraintEnd_toEndOf="@id/component_numeric_keyboard_view_number_3"
            app:layout_constraintStart_toStartOf="@id/component_numeric_keyboard_view_number_3"
            app:layout_constraintTop_toBottomOf="@id/component_numeric_keyboard_view_number_3"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_7"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="7"
            app:layout_constraintEnd_toEndOf="@id/component_numeric_keyboard_view_number_4"
            app:layout_constraintStart_toStartOf="@id/component_numeric_keyboard_view_number_4"
            app:layout_constraintTop_toBottomOf="@id/component_numeric_keyboard_view_number_4"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_8"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="8"
            app:layout_constraintEnd_toEndOf="@id/component_numeric_keyboard_view_number_5"
            app:layout_constraintStart_toStartOf="@id/component_numeric_keyboard_view_number_5"
            app:layout_constraintTop_toBottomOf="@id/component_numeric_keyboard_view_number_5"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_9"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="9"
            app:layout_constraintEnd_toEndOf="@id/component_numeric_keyboard_view_number_6"
            app:layout_constraintStart_toStartOf="@id/component_numeric_keyboard_view_number_6"
            app:layout_constraintTop_toBottomOf="@id/component_numeric_keyboard_view_number_6"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/component_numeric_keyboard_view_number_0"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            android:text="0"
            app:layout_constraintEnd_toEndOf="@id/component_numeric_keyboard_view_number_8"
            app:layout_constraintStart_toStartOf="@id/component_numeric_keyboard_view_number_8"
            app:layout_constraintTop_toBottomOf="@id/component_numeric_keyboard_view_number_8"
            tools:ignore="HardcodedText" />


        <FrameLayout
            android:id="@+id/component_numeric_keyboard_view_delete"
            style="@style/ComponentLoginKeyboardViewNumberContainer"
            app:layout_constraintEnd_toEndOf="@id/component_numeric_keyboard_view_number_9"
            app:layout_constraintStart_toStartOf="@id/component_numeric_keyboard_view_number_9"
            app:layout_constraintTop_toBottomOf="@id/component_numeric_keyboard_view_number_9">

            <ImageView
                android:id="@+id/component_numeric_keyboard_view_delete_image"
                style="@style/ComponentLoginKeyboardViewInner"
                android:src="@drawable/ic_component_numeric_keyboard_fingerprint"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <TextView
            android:id="@+id/component_numeric_keyboard_recover_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/component_numeric_keyboard_reset_password"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/component_numeric_keyboard_view_number_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/default_margin"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>