<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_graph"
    app:startDestination="@id/passwordCreationStep1Fragment">

    <fragment
        android:id="@+id/validateNumberFragment"
        android:name="com.rookia.android.sejo.ui.register.number.ValidatePhoneNumberFragment"
        android:label="validate_number_fragment"
        tools:layout="@layout/validate_number_fragment" >
        <action
            android:id="@+id/action_validateNumberFragment_to_validateSmsFragment"
            app:destination="@id/validateSmsFragment"
            app:launchSingleTop="true" />
        <action
            android:id="@+id/action_validateNumberFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
    </fragment>

    <fragment
        android:id="@+id/validateSmsFragment"
        android:name="com.rookia.android.sejo.ui.register.sms.ValidateSmsFragment"
        android:label="validate_sms_fragment"
        tools:layout="@layout/validate_sms_fragment" >
        <argument
            android:name="phonePrefix"
            app:argType="string"/>
        <argument
            android:name="phoneNumber"
            app:argType="string"/>
        <action
            android:id="@+id/action_validateSmsFragment_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_validateSmsFragment_to_passwordCreationStep1Fragment"
            app:destination="@id/passwordCreationStep1Fragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        tools:layout="@layout/fragment_blank"
        android:name="com.rookia.android.sejo.ui.common.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/passwordCreationStep1Fragment"
        tools:layout="@layout/fragment_password_creation_step1"
        android:name="com.rookia.android.sejo.ui.register.passwordcreation.PasswordCreationStep1Fragment"
        android:label="PasswordCreationStep1Fragment" >
        <action
            android:id="@+id/action_passwordCreationStep1Fragment_to_passwordCreationStep2Fragment"
            app:destination="@id/passwordCreationStep2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordCreationStep2Fragment"
        tools:layout="@layout/fragment_password_creation_step2"
        android:name="com.rookia.android.sejo.ui.register.passwordcreation.PasswordCreationStep2Fragment"
        android:label="PasswordCreationStep2Fragment" >
        <argument
            android:name="code"
            app:argType="string" />
    </fragment>
</navigation>