<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_creation_graph"
    app:startDestination="@id/groupMainInfoFragment">

    <fragment
        android:id="@+id/groupMainInfoFragment"
        android:name="com.rookia.android.sejo.ui.groupcretion.GroupMainInfoFragment"
        tools:layout="@layout/fragment_group_main_info"
        android:label="GroupMainInfoFragment" >
        <action
            android:id="@+id/action_groupMainInfoFragment_to_groupMembersFragment"
            app:destination="@id/groupMembersFragment"
            app:enterAnim="@anim/navigation_fragment_enter"
            app:exitAnim="@anim/navigation_fragment_exit"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/navigation_fragment_pop_enter"
            app:popExitAnim="@anim/navigation_fragment_pop_exit"
            app:popUpTo="@id/groupMainInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupMembersFragment"
        android:name="com.rookia.android.sejo.ui.groupcretion.GroupMembersFragment"
        android:label="fragment_group_members"
        tools:layout="@layout/fragment_group_members" >
        <argument
            android:name="groupName"
            app:argType="string" />
        <argument
            android:name="admins"
            app:argType="integer" />
    </fragment>

</navigation>